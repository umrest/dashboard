<UserControl x:Class="REST_Dashboard.ConnectionIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:REST_Dashboard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="200" Height="25">
    <Grid Margin="0,0,0,0">
        <Label x:Name="ConnectionLabel" Content="Label" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" Width="120"/>
        <Rectangle x:Name="ConnectionColor" Fill="#FFF4F4F5" HorizontalAlignment="Right" Height="25" Stroke="Black" VerticalAlignment="Center" Width="121"/>

    </Grid>
</UserControl>
