<Window x:Name="MainWindow1" x:Class="REST_Dashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:REST_Dashboard"
        mc:Ignorable="d"
        Title="REST Dashboard" Height="487" Width="858">
    <Window.Resources>
        <Color x:Key="EnableColor">#FF008500</Color>
        <Color x:Key="Enabled">#FF008500</Color>
        <Color x:Key="Disabled">#FF7D0000</Color>
        <Color x:Key="EStopped">#FFC56B00</Color>
        <Color x:Key="Teleop">#FF0800B8</Color>
        <Color x:Key="Auton">#FF850085</Color>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24*"></ColumnDefinition>
            <ColumnDefinition Width="61*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.ColumnSpan="2">
            <TabItem x:Name="Status_Tab" Header="Status">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="161*"/>
                        <ColumnDefinition Width="121*"/>
                        <ColumnDefinition Width="281*"/>
                        <ColumnDefinition Width="281*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Margin="281,0,-0.333,0.333" Grid.Column="2" Grid.RowSpan="2" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Button x:Name="Enable_Button" Content="Enable" Margin="0,-3,0,0" Foreground="White" Click="Enable_Button_Click" BorderThickness="5" Background="#FF008500" BorderBrush="{x:Null}"/>
                        <Button x:Name="Disable_Button" Content="Disable" Margin="0,-3,0,0" Foreground="White" BorderBrush="{x:Null}" Grid.Column="1" Click="Disable_Button_Click" BorderThickness="5">
                            <Button.Background>
                                <SolidColorBrush Color="{DynamicResource Disabled}"/>
                            </Button.Background>
                        </Button>
                        <Button x:Name="EStop_Button" Content="E-STOP" BorderBrush="{x:Null}" Foreground="White" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Click="EStop_Button_Click" BorderThickness="5">
                            <Button.Background>
                                <SolidColorBrush Color="{DynamicResource EStopped}"/>
                            </Button.Background>
                        </Button>
                        <Button x:Name="Teleop_Button" Content="Teleop" Margin="0,0,0,0" BorderBrush="{x:Null}" Foreground="White" Grid.Row="2" Grid.Column="0" Click="Teleop_Button_Click" BorderThickness="5">
                            <Button.Background>
                                <SolidColorBrush Color="{DynamicResource Teleop}"/>
                            </Button.Background>
                        </Button>
                        <Button x:Name="Auton_Button" Content="Auton" Margin="0,0,0,0" BorderBrush="{x:Null}" Foreground="White" Grid.Row="2" Grid.Column="1" Click="Auton_Button_Click" BorderThickness="5,5,6,5" >
                            <Button.Background>
                                <SolidColorBrush Color="{DynamicResource Auton}"/>
                            </Button.Background>
                        </Button>
                    </Grid>
                    <StackPanel x:Name="ConnectionIndicators" Margin="0,0,0,0" Grid.ColumnSpan="2">
                        <local:ConnectionIndicator x:Name="HeroConnectedIndicator" HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="Auto" Height="Auto" label="Hero" />
                        <local:ConnectionIndicator x:Name="VisionConnectedIndicator" HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="Auto" Height="Auto" label="Vision" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem x:Name="Teleop_Tab" Header="Teleop">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
                        <Button x:Name="enable_joystick" Content="Enable Joystick Send" HorizontalAlignment="Stretch" VerticalAlignment="Top"  Click="enable_joystick_click" Margin="0,0,1,0"/>
                        <Button x:Name="disable_joystick" Content="Disable Joystick Send" HorizontalAlignment="Stretch" VerticalAlignment="Top"  Click="disable_joystick_click" Margin="0,0,1,0"/>
                        <Label Content="Driver Joystick&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26"/>
                        <ComboBox x:Name="ControllerSelect1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" DropDownOpened="ControllerSelect1_DropDownOpened" Margin="0,0,1,0" />
                        <Button x:Name="send_one_joystick" Content="Joystick One Send" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,1,0" Click="send_one_joystick_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>


            <TabItem x:Name="State_Tab" Header="State">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <local:FieldView x:Name="field_view" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.ColumnSpan="2"  Grid.RowSpan="2"/>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Left" Height="388" VerticalAlignment="Top" Width="281" Grid.RowSpan="3">
                        <Label Content="Vision State View"/>
                        <local:VisionStateView x:Name="vision_state_view" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                    </StackPanel>
                </Grid>

            </TabItem>

            <TabItem x:Name="Other_Tab" Header="Other">
                <Grid>
                    <Button x:Name="EStop_Reset_Button" Content="EStop Reset" HorizontalAlignment="Center" VerticalAlignment="Top" Width="157" Click="EStop_Reset_Button_Click" Margin="333,205,354.667,0" Background="#FFDC0000">
                    </Button>
                </Grid>
            </TabItem>





        </TabControl>

        <local:ConnectionIndicator x:Name="connected_indicator" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="189" label="Connected"/>

    </Grid>
</Window>
